<h1>Listing posts</h1>

<table>
  <tr>
    <th>Post date</th>
    <th>Post category</th>
    <th>Post title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.post_date %></td>
    <td><%= post.post_category %></td>
    <td><%= post.post_title %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

